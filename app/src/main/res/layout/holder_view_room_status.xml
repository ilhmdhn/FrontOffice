<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    android:padding="3dp"
    android:clickable="true"
    android:background="@color/dark_secondary_color"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ROOM INFO"
                android:textColor="@color/dark_primary_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kode Room"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:capitalize="words"
                    android:text="Kode Room"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="Deprecated,TextViewEdits" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status Room"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_paid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_login"
                    android:backgroundTint="@color/dark_green_button"
                    android:gravity="center"
                    android:text="PAID "
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_login"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text=" Room Call"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guest"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_guest_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nama Tamu"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sisa Waktu"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_room_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="00:00"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="@color/dark_primary_white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER INFO"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_primary_text"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/ly_room_order_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Order"
                            android:textColor="@color/dark_primary_text"
                            android:textSize="14sp"
                            app:drawableStartCompat="@drawable/ic_cart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="3dp"
                            android:textColor="@color/dark_primary_text"/>

                        <TextView
                            android:id="@+id/tv_room_so_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Jumlah SO"
                            android:textColor="@color/dark_primary_text"
                            android:textSize="14sp"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Process"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_process" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_room_order_process"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Process"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Success"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_room_order_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Success"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Return"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_return" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_room_order_return"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Return"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_room_order_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Order Food Empty"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/dark_primary_white"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

