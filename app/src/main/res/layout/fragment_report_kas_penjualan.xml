<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary_background"
    android:paddingHorizontal="12dp"
    tools:context=".view.fragment.reporting.kas.penjualan.ReportKasPenjualanFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="Pendapatan lain - lain"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pendapatan_lain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="UM Sudah Checkin"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_uang_muka_cin_belum_bayar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="UM reservasi Checkin Awal"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_uang_muka_rsv_cin_belum_bayar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="UM Reservasi belum checkin "
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_uang_muka_rsv_belum_checkin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="UM Reservasi sudah checkin"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_uang_muka_rsv_sudah_checkin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white" />

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="Total hutang reservasi "
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total_hutang_rsv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="Kamar "
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total_kamar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="Makanan Minuman "
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_value_fnb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white" />

                <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="sans-serif-medium"
                        android:text="Total "
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text=":"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="14sp"
                        tools:text="1" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
</ScrollView>