<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/checkin_input_desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/keterangan"
        app:boxBackgroundColor="@color/dark_secondary_color"
        app:hintTextColor="@color/dark_primary_text"
        android:textColorHint="@color/dark_primary_text"
        app:shapeAppearance="@style/RoundedInputText">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_primary_text"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textColorHint="@color/dark_primary_text"
            android:textSize="18sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/checkin_input_event_desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@color/dark_secondary_color"
        app:hintTextColor="@color/dark_primary_text"
        android:textColorHint="@color/dark_primary_text"
        android:hint="@string/event_acara"
        app:shapeAppearance="@style/RoundedInputText">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_primary_text"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textColorHint="@color/dark_primary_text"
            android:textSize="18sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/checkin_input_event_name_alias"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@color/dark_secondary_color"
        app:hintTextColor="@color/dark_primary_text"
        android:textColorHint="@color/dark_primary_text"
        android:hint="@string/nama_event"
        app:shapeAppearance="@style/RoundedInputText">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_primary_text"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textColorHint="@color/dark_primary_text"
            android:textSize="18sp"/>

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
