<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:elevation="3dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/dark_secondary_color"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_member"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_cover_height"
            android:visibility="gone" />

        <TextView
            android:id="@+id/room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_member"
            android:gravity="center_horizontal"
            android:lines="1"
            android:paddingLeft="@dimen/card_title_padding"
            android:paddingTop="@dimen/card_title_padding"
            android:paddingRight="@dimen/card_title_padding"
            android:text="@string/app_name"
            android:textColor="@color/dark_primary_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/room_type_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_type"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/card_price_padding_bottom"
            android:text="@string/app_name"
            android:textColor="@color/dark_primary_text"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

