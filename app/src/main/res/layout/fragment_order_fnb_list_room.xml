<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_primary_background"
    tools:context=".view.fragment.operasional.orderfnb.OrderFnbListRoomFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/dummy_list_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/list_room_checkin"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_primary_text"
        android:textSize="22sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummy_list_room"
        android:layout_marginTop="9dp"
        tools:listitem="@layout/layout_list_room_checkin" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_qr_scan"
        app:borderWidth="0dp"
        app:rippleColor="@color/white"
        android:contentDescription="@string/scan" />
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>