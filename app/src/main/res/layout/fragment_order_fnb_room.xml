<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary_background"
    tools:context=".view.fragment.operasional.fnb.order.OrderFnbRoomFragment">

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_choose_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_primary_text"
            android:drawableEnd="@drawable/ic_remove"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            tools:text="category"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_fnb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:backgroundTint="@color/dark_secondary_color"
            android:background="@drawable/background_button_login"/>
    </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/sv_category"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"
            android:layout_below="@id/ll_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_category_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text"
                    android:layout_marginStart="6dp"
                    android:text="FOOD"/>

                <Button
                    android:id="@+id/btn_category_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text"
                    android:layout_marginStart="6dp"
                    android:text="DRINK"/>

                <Button
                    android:id="@+id/btn_category_cigarette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text"
                    android:layout_marginStart="6dp"
                    android:text="CIGARETTE"/>

                <Button
                    android:id="@+id/btn_category_snack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text"
                    android:layout_marginStart="6dp"
                    android:text="SNACK"/>

                <Button
                    android:id="@+id/btn_category_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text"
                    android:layout_marginStart="6dp"
                    android:text="PACKAGE"/>
            </LinearLayout>
        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fnb"
        android:layout_below="@id/sv_category"
        android:layout_above="@+id/fab_order"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_fnb"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fab_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:text="order"
        android:paddingHorizontal="6dp"
        android:visibility="gone"
        android:background="@drawable/background_button_login"
        android:drawableEnd="@drawable/ic_slide_up"
        android:textColor="@color/dark_primary_text"/>


</RelativeLayout>