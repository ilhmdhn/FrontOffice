<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary_background"
    tools:context=".view.fragment.operasional.orderfnb.order.OrderFnbRoomFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_fnb"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:backgroundTint="@color/dark_secondary_color"
        android:background="@drawable/background_button_login"/>

        <HorizontalScrollView
            android:id="@+id/sv_category"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="12dp"
            android:layout_below="@id/search_fnb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENU"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="FOOD"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="DRINK"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="CIGARETTE"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="SNACK"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="PACKAGE"/>
            </LinearLayout>
        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fnb"
        android:layout_below="@id/sv_category"
        android:layout_above="@+id/fab_order"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_fnb"/>
    
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:text="order"
        android:paddingHorizontal="6dp"
        android:drawableEnd="@drawable/ic_slide_up"
        android:textColor="@color/dark_primary_text"
        android:backgroundTint="@color/dark_secondary_color"
        />


</RelativeLayout>