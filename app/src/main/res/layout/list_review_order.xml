<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/background_border"
    android:backgroundTint="@color/dark_secondary_color"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="AYAM CABE GARAM"
        android:textColor="@color/dark_primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout12"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/checkin_input_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_food_name"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_remove_circle"
            app:tint="@color/graylight" />

        <TextView
            android:id="@+id/tv_fnb_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/dark_primary_text"
            android:textSize="16sp"
            tools:text="1" />

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_add"
            app:tint="@color/graylight" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catatan :"
        android:drawableStart="@drawable/ic_notes"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_food_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_food_name" />

    <TextView
        android:id="@+id/tv_order_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_notes"
        app:layout_constraintTop_toTopOf="@+id/tv_notes" />
    
</androidx.constraintlayout.widget.ConstraintLayout>