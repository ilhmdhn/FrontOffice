<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_notif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_happy_puppy_group"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfpro_display_bold"
                android:text="@string/room"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/img_notif"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/type_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textColor="@color/colorOrange"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/room_type"
                app:layout_constraintTop_toBottomOf="@+id/room_type" />

            <TextView
                android:id="@+id/time_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textColor="@color/subText"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/type_notif"
                app:layout_constraintTop_toBottomOf="@+id/room_type" />

            <ImageButton
                android:id="@+id/bttn_detail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>