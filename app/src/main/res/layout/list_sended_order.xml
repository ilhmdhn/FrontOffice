<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_margin="1dp"
    android:background="@drawable/background_border"
    android:backgroundTint="@color/dark_secondary_color"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_fnb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/dark_primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout12"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nama FnB" />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_notes"
        android:text="Catatan :"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sol_code" />

    <TextView
        android:id="@+id/tv_order_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_order_submit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_notes"
        app:layout_constraintTop_toTopOf="@+id/tv_notes"
        tools:text="Tambah kecap 2 botol" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_remove_circle"
            app:tint="@color/graylight" />

        <TextView
            android:id="@+id/tv_fnb_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/dark_primary_text"
            android:textSize="16sp"
            tools:text="1" />

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_add"
            app:tint="@color/graylight" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_order_submit"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/background_button_login"
        android:text="@string/submit"
        android:textColor="@color/dark_primary_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_notes" />

    <TextView
        android:id="@+id/tv_sol_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="SOL-1234567"
        android:textColor="@color/dark_secondary_text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_fnb_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_fnb_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reprint_sol"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_button_login"
        android:paddingHorizontal="9dp"
        android:text="Cetak Ulang Slip Order"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout12"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>