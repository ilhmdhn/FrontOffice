<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:elevation="3dp"
    android:backgroundTint="@color/dark_secondary_color"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/room_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_title_padding"
            android:paddingTop="@dimen/card_title_padding"
            android:paddingRight="@dimen/card_title_padding"
            android:text="@string/app_name"
            android:textColor="@color/dark_primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_info"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:gravity="right"
            android:textColor="@color/dark_primary_text"
            android:paddingBottom="@dimen/card_price_padding_bottom"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_member"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/card_price_padding_bottom"
            android:text="@string/app_name"
            android:textColor="@color/dark_primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

