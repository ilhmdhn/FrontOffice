<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary_background"
    tools:context=".view.fragment.reporting.kas.pembayaran.ReportKasPembayaranFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Transfer"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Poin Membership"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_poin_membership"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="E - Money"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_emoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tunai"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_tunai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Kartu Kredit"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_credit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Kartu Debet"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_debit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Voucher"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_voucher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Piutang"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_piutang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Entertainment"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_entertainment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Uang Muka"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_uang_muka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/white" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Total"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=":"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_jumlah_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    tools:text="1" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btn_cash_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue_variant"
            android:enabled="false"
            android:text="Pecahan Tunai"
            android:textColor="@color/dark_primary_text" />
    </LinearLayout>
</ScrollView>