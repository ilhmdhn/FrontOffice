<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.fragment.reporting.kas.pembayaran.ReportKasPembayaranFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text="Transfer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text="Poin Membership"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="10dp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_poin_membership"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="E - Money"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_emoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        android:text="Tunai" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/black"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_jumlah_tunai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
                        tools:text="1" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Kartu Kredit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="10dp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_credit_card"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Kartu Debet"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_debit_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text="Voucher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_voucher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text="Piutang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_piutang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Entertainment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_entertainment"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:text="Uang Muka"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_uang_muka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/black"/>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text=":"/>

                <TextView
                    android:id="@+id/tv_jumlah_total"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    tools:text="1"/>
            </TableRow>

        </TableLayout>
            <Button
                android:id="@+id/btn_cash_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Pecahan Tunai" />
    </LinearLayout>
</ScrollView>